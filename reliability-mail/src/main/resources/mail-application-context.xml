<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
	">
	
	<context:component-scan base-package="ua.edu.lp.reliability.mail" />

	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
  		<property name="host" value="${mail.service.host}"/>
  		<property name="username" value="${mail.service.username}"/>
  		<property name="password" value="${mail.service.password}" />
  		<property name="port" value="587" />
  		<property name="javaMailProperties">
  			<props>
  				<prop key="mail.smtp.auth">true</prop>
  				<prop key="mail.smtp.starttls.enable">true</prop>
  			</props>
  		</property>
	</bean>
</beans>